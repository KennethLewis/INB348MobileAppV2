<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/unit_template_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4pt"
    android:layout_marginTop="6pt"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/unitcode_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:clickable="true"
        android:onClick="unitDetails"
        android:text="@string/unit_1_heading"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/unit_template_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@layout/layout_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4pt" >

            <ImageView
                android:id="@+id/arrow_icon_unit"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/arrow_icon" />

            <TextView
                android:id="@+id/announcement_last_unit"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="@string/newsfeed_item_content_announcement"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="6pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <ImageView
                android:id="@+id/announcement_icon_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2pt"
                android:contentDescription="@string/newAnnouncementsNOTIFY"
                android:src="@drawable/announcement_icon" />

            <TextView
                android:id="@+id/announcement_value_unit"
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:layout_margin="2pt"
                android:text="x1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="8pt" />

            <ImageView
                android:id="@+id/post_icon_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2pt"
                android:contentDescription="@string/newPostsNOTIFY"
                android:src="@drawable/post_icon" />

            <TextView
                android:id="@+id/post_value_unit"
                android:layout_width="34dp"
                android:layout_height="30dp"
                android:layout_margin="2pt"
                android:text="x3"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="8pt" />

            <ImageView
                android:id="@+id/postsOnYours_icon_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2pt"
                android:contentDescription="@string/newPostsToYoursNOTIFY"
                android:src="@drawable/your_post_icon" />

            <TextView
                android:id="@+id/postsOnYours_value_unit"
                android:layout_width="42dp"
                android:layout_height="30dp"
                android:layout_margin="2pt"
                android:text="x1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="8pt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>